#配置文件内容
#——————————————–
pidfilepath = {{ install_dir }}/shard1/log/shard1.pid
dbpath = {{ install_dir }}/shard1/data
logpath = {{ install_dir }}/shard1/log/shard1.log
logappend = true

bind_ip = 0.0.0.0
port = {{ shard1_port }}
fork = true
 
#打开web监控
httpinterface=true
rest=true
 
#副本集名称
replSet=shard1
 
#declare this is a shard db of a cluster;
shardsvr = true
 
#设置最大连接数
maxConns=20000